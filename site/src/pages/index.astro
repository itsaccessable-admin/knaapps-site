---
import BaseLayout from "../layouts/BaseLayout.astro";
import { projects } from "../data/projects";
---

<BaseLayout title="knaAPPS â€” Excel, Access, GIS, and Web Apps">
  <section class="card p-8">
    <h1 class="text-3xl font-semibold tracking-tight">Build practical systems that work in the real world.</h1>
    <p class="mt-3 text-slate-700 max-w-2xl">
      knaAPPS is a professional hub for Excel automation, Microsoft Access systems, GIS solutions, and web applications.
      Each project emphasizes reliability, clarity, and measurable operational value.
    </p>
    <div class="mt-6 flex flex-wrap gap-3">
      <a class="badge hover:border-slate-400" href="/work">View Work</a>
      <a class="badge hover:border-slate-400" href="/contact">Request a Quote</a>
      <a class="badge hover:border-slate-400" href="https://apps.knaapps.net" target="_blank" rel="noopener">Live Apps</a>
    </div>
  </section>

  <section class="mt-10">
    <h2 class="text-xl font-semibold">Featured</h2>
    <div class="mt-4 grid gap-4 md:grid-cols-2">
      {projects.slice(0, 4).map((p) => (
        <article class="card p-6">
          <div class="flex items-start justify-between gap-4">
            <div>
              <div class="badge">{p.category}</div>
              <h3 class="mt-3 text-lg font-semibold">{p.title}</h3>
              <p class="mt-2 text-slate-700">{p.summary}</p>
              <div class="mt-4 flex flex-wrap gap-2">
                {p.tags.map((t) => <span class="badge">{t}</span>)}
              </div>
            </div>
            {p.liveUrl ? (
              <a class="badge hover:border-slate-400" href={p.liveUrl} target="_blank" rel="noopener">Open</a>
            ) : null}
          </div>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
