---
import BaseLayout from "../layouts/BaseLayout.astro";
import { projects } from "../data/projects";
---

<BaseLayout
  title="knaAPPS â€” Excel, Access, GIS, and Web Apps"
  description="Excel automation, Microsoft Access systems, GIS solutions, and web applications built for real-world operations."
  ogImage="/brand/knaapps-banner.png"
>
  <section class="card p-8 relative overflow-hidden">
    <!-- Banner background -->
    <img
      src="/brand/knaapps-banner.png"
      alt=""
      aria-hidden="true"
      class="absolute inset-0 h-full w-full object-cover opacity-25"
      loading="eager"
    />
    <!-- Dark overlay for text contrast -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/60 via-black/50 to-black/30"></div>

    <div class="relative flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
      <div class="max-w-2xl">
        <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/10 px-4 py-2 text-sm text-slate-200">
          <span class="h-2 w-2 rounded-full bg-kna-cyan"></span>
          Practical systems. Real operational value.
        </div>

        <h1 class="mt-5 text-3xl md:text-4xl font-semibold tracking-tight text-slate-100">
          Build practical systems that work in the real world.
        </h1>

        <p class="mt-3 text-slate-200">
          knaAPPS is a professional hub for Excel automation, Microsoft Access systems, GIS solutions, and web applications.
          Each project emphasizes reliability, clarity, and measurable operational value.
        </p>

        <div class="mt-6 flex flex-wrap gap-3">
          <a class="btn-primary" href="/contact">Request a Quote</a>
          <a class="badge hover:border-white/25" href="/work">View Work</a>
        </div>
      </div>

      <div class="hidden md:block">
        <img
          src="/brand/knaapps-logo.png"
          alt="knaAPPS"
          class="h-28 w-28 rounded-3xl border border-white/10 bg-white/10 p-3"
          loading="eager"
        />
      </div>
    </div>
  </section>

  <section class="mt-10">
    <h2 class="text-xl font-semibold text-slate-100">Featured</h2>

    <div class="mt-4 grid gap-4 md:grid-cols-2">
      {projects.slice(0, 4).map((p) => (
        <article class="card p-6">
          <div class="flex items-start justify-between gap-4">
            <div>
              <div class="badge">{p.category}</div>
              <h3 class="mt-3 text-lg font-semibold text-slate-100">{p.title}</h3>
              <p class="mt-2 text-slate-300">{p.summary}</p>

              <div class="mt-4 flex flex-wrap gap-2">
                {p.tags.map((t) => <span class="badge">{t}</span>)}
              </div>
            </div>

            {p.liveUrl ? (
              <a class="badge hover:border-white/25" href={p.liveUrl} target="_blank" rel="noopener">Open</a>
            ) : null}
          </div>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
