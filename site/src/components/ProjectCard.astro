---
const { title, summary, tags, liveUrl, id } = Astro.props;
---

<article id={id} class="card p-6">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h3 class="text-lg font-semibold">{title}</h3>
      <p class="mt-2 text-slate-700">{summary}</p>
      <div class="mt-4 flex flex-wrap gap-2">
        {tags.map((t) => <span class="badge">{t}</span>)}
      </div>
    </div>
    {liveUrl ? (
      <a class="badge hover:border-slate-400" href={liveUrl} target="_blank" rel="noopener">Open App</a>
    ) : null}
  </div>
</article>
