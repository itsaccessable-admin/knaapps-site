---
const { tabs, active } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {tabs.map((t) => (
    <a
      href={t.href}
      class={
        "badge " +
        (t.label === active
          ? "border-white/25 bg-white/10 text-slate-100"
          : "text-slate-300 hover:text-slate-100 hover:border-white/25")
      }
    >
      {t.label}
    </a>
  ))}
</div>
